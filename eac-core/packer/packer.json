{
  "builders": [
    {
      "ami_description": "EAC AMI",
      "ami_name": "{{user `ami_name` | clean_resource_name}}",
      "associate_public_ip_address": "false",
      "instance_type": "t3.micro",
      "name": "CodePipeline EAC AMI Builder",
      "region": "{{user `aws_region`}}",
      "run_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "run_volume_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "source_ami": "{{user `upstream_ami`}}",
      "ssh_username": "ec2-user",
      "subnet_id": "{{user `subnet`}}",
      "tags": {
        "Component": "{{user `component_name`}}",
        "Name": "{{user `ami_name`}}"
      },
      "type": "amazon-ebs",
      "vpc_id": "{{user `vpc`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../build/target/",
      "destination": "/tmp/target"
    }
  ]
}
