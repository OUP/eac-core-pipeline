{
  "builders": [
    {
      "ami_description": "EAC AMI",
      "ami_name": "{{user `ami_name` | clean_resource_name}}",
      "associate_public_ip_address": "false",
      "instance_type": "t3.micro",
      "name": "CodePipeline EAC AMI Builder",
      "region": "{{user `aws_region`}}",
      "run_tags": {
        "Name": "ami_name"
      },
      "run_volume_tags": {
        "Name": "ami_name"
      },
      "snapshot_tags": {
        "Name": "ami_name"
      },
      "source_ami": "{{user `golden_ami`}}",
      "ssh_username": "ec2-user",
      "subnet_id": "{{user `subnet`}}",
      "type": "amazon-ebs",
      "vpc_id": "{{user `vpc`}}"
    }
  ],
  "_comment": "The shell command removes the defualt webapps installed with Tomcat9",
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /opt/tomcat9/webapps/*"
      ]
    },
    {
      "type": "file",
      "source": "build/",
      "destination": "/tmp/target"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/target/* /opt/tomcat9/webapps/"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo ls /opt/tomcat9/webapps/"
      ]
    }
  ],
  "variables": {
    "ami_name": "EAC-CorePipeline-AMI-{{env `ENVIRONMENT`}}-{{isotime \"02-Jan-06 03_04_05\"}}",
    "environment": "{{env `ENVIRONMENT`}}",
    "subnet": "{{env `BUILD_SUBNET_ID`}}",
    "vpc": "{{env `BUILD_VPC_ID`}}",
    "golden_ami": "{{env `GOLDEN_AMI_ID`}}"
  }
}
