<xwss:SecurityConfiguration dumpMessages="false" xmlns:xwss="http://java.sun.com/xml/ns/xwss/config">
	<xwss:RequireUsernameToken
		passwordDigestRequired="false" 
		nonceRequired="false"
		maxClockSkew="60"
		timestampFreshnessLimit="300" />
</xwss:SecurityConfiguration>
 